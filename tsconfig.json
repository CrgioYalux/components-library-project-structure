{
  "compilerOptions": {
    "target": "es5", // generate code compatible with ECMAScript5
    "lib": ["dom", "dom.iterable", "esnext"], // for managing the dom
    "allowJs": true,
    "skipLibCheck": true, // skip type-checking .d.ts files
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext", // set the module system for code compiling to ES6 and above
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx" // typescript to use react jsx syntax
  },
  "include": ["src"] // include files from ./src
}
